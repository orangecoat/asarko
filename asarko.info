; $Id$
name = "Asarko"
description = "Asarko is a base theme that resets all of Drupal invasive styles and overrides default markup with HTML5-based markup"
core = "6.x"
engine = "phptemplate"

regions[left] = "Left sidebar"
regions[right] = "Right sidebar"
regions[content] = "Content"
regions[header] = "Header"
regions[footer] = "Footer"

; CSS Overrides
stylesheets[all][] = "drupal/block.css"
stylesheets[all][] = "drupal/openid.css"
stylesheets[all][] = "drupal/system.css"
stylesheets[all][] = "drupal/update.css"
stylesheets[all][] = "drupal/user.css"

stylesheets[all][] = "css/reset.css"
stylesheets[all][] = "css/print.css"

; Unset or re-implement invasive CSS styles
